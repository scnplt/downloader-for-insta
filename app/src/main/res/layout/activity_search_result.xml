<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".view.SearchResultActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sra_rvSearchUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="5dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/sra_txtViewError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/sra_error_text"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/error_text_size"
        android:visibility="gone" />

    <TextView
        android:id="@+id/sra_txtViewUserNotFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/sra_user_not_found_text"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/info_text_size"
        android:visibility="gone" />
</FrameLayout>
