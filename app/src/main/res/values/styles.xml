<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="snackbarStyle">@style/Widget.MaterialComponents.Snackbar.FullWidth</item>
        <item name="actionBarTheme">@style/CustomActionBarTheme</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!-- Application theme no action bar -->
    <style name="AppThemeNoActionBar" parent="@style/Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/CustomActionBarTheme</item>
        <item name="appBarLayoutStyle">@style/CustomAppBarTheme</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CustomActionBarTheme" parent="@style/AppTheme">
        <item name="android:background">@color/colorPrimaryMid</item>
        <item name="buttonGravity">center_vertical</item>
        <item name="toolbarStyle">@style/CustomToolbarStyle</item>
        <item name="titleTextColor">@color/colorDarkerGray</item>
        <item name="colorControlNormal">@color/colorDarkerGray</item>
    </style>

    <style name="CustomAppBarTheme" parent="@style/AppTheme">
        <item name="android:background">@color/colorPrimaryMid</item>
    </style>

    <style name="CustomToolbarStyle" parent="@style/AppTheme"/>

    <!-- Dialog theme -->
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:indeterminateTint">@color/colorAccent</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>